:8080 {
  encode zstd gzip

  # App API (/v1/*) → dify-api
  handle /v1/* {
    reverse_proxy http://dify-api:5001
  }

  # Console API (/console/api/*) → dify-api
  handle /console/api/* {
    reverse_proxy http://dify-api:5001
  }

  # その他（Web UI等） → dify-web
  handle {
    reverse_proxy http://dify-web:3000
  }
}
